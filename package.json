{
  "name": "@checkdigit/time",
  "version": "0.0.1",
  "description": "Standard time handling",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "engines": {
    "node": ">=12.18",
    "npm": ">=6.14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/time.git"
  },
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/time/issues"
  },
  "homepage": "https://github.com/checkdigit/time#readme",
  "devDependencies": {
    "@checkdigit/eslint-config": "3.3.6",
    "@checkdigit/prettier-config": "^1.0.1",
    "@checkdigit/publish": "^1.0.14",
    "@checkdigit/typescript": "^3.9.3",
    "@types/jest": "^26.0.4",
    "eslint": "^7.4.0",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "proposal-temporal": "^0.2.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/node_modules/"
    ]
  },
  "scripts": {
    "prepublishOnly": "publish",
    "postpublish": "rimraf dist .npmignore",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "lint": "eslint -f unix 'src/**/*.ts'",
    "lint:fix": "eslint -f unix 'src/**/*.ts' --fix",
    "prettier": "prettier --list-different 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "test": "jest && npm run lint && npm run prettier"
  }
}
